<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns="http://pmd.sf.net/ruleset/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="FLOW3 rule set" xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0http://pmd.sf.net/ruleset_xml_schema.xsd" xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
	<description>Rule set adjusted to FLOW3 conventions</description>

	<rule ref="rulesets/unusedcode.xml"/>
	<rule ref="rulesets/codesize.xml"/>
	<rule ref="rulesets/design.xml"/>
